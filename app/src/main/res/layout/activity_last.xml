<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LastActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/main_fon_1"
            android:weightSum="100">

        <ImageView
                android:layout_width="330dp"
                android:layout_height="0dp"
                android:src="@drawable/rocket"
                android:layout_gravity="center"
                android:layout_weight="60"/>


        <TextView
                android:id="@+id/textStartFragment"
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_weight="28"
                android:layout_marginTop="60dp"
                android:textColor="@color/textBlack"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Спасибо за заказ!\nМы уже начали его готовить."/>

        <Button
                android:id="@+id/startLoginButton"
                android:layout_width="350dp"
                android:layout_height="0dp"
                android:layout_weight="11"
                android:layout_marginTop="60dp"
                android:text="Выбрать что-нибудь еще"
                android:textSize="@dimen/size_text_profile_large"
                android:padding="20dp"
                android:layout_gravity="center"
                android:background="@drawable/back_for_btn_login"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
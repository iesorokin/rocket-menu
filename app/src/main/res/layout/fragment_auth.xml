<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.start.AuthFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/main_fon_1"
            android:weightSum="100">

        <ImageView
                android:layout_width="330dp"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:src="@drawable/rocket"
                android:layout_gravity="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="20"
                android:weightSum="100">

            <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="70">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Выбери свой цех"
                        android:textSize="24sp"
                        android:textColor="@color/textBlack"/>

                <RadioGroup
                        android:id="@+id/radioGroupTypeKitchen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:weightSum="100">

                    <RadioButton
                            android:id="@+id/radioButtonPost"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_weight="17"
                            android:layout_height="0dp"
                            android:textSize="19sp"
                            android:checked="true"
                            android:text="Доготовка"/>

                    <RadioButton
                            android:id="@+id/radioButtonCold"
                            android:layout_width="wrap_content"
                            android:layout_weight="17"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:layout_height="0dp"
                            android:text="Холодный цех"/>
                    <RadioButton
                            android:id="@+id/radioButtonCandy"
                            android:layout_width="wrap_content"
                            android:textSize="19sp"
                            android:layout_weight="17"
                            android:textStyle="bold"
                            android:layout_height="0dp"
                            android:text="Кондитерская"/>

                    <RadioButton
                            android:id="@+id/radioButtonHot"
                            android:layout_width="wrap_content"
                            android:textSize="19sp"
                            android:layout_weight="17"
                            android:layout_height="0dp"
                            android:textStyle="bold"
                            android:text="Горячий цех"/>

                    <RadioButton
                            android:id="@+id/radioButtonBlank"
                            android:layout_width="wrap_content"
                            android:textSize="19sp"
                            android:layout_weight="17"
                            android:layout_height="0dp"
                            android:textStyle="bold"
                            android:text="Заготовка"/>

                    <RadioButton
                            android:id="@+id/radioButtonBakery"
                            android:layout_width="wrap_content"
                            android:textSize="19sp"
                            android:layout_weight="17"
                            android:layout_height="0dp"
                            android:textStyle="bold"
                            android:text="Пекарня"/>

                </RadioGroup>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="22"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/textBlack">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/loginPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/loginPassword"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:minLines="1"
                        android:singleLine="true"
                        android:textColor="@color/textBlack"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
                android:id="@+id/logBtn"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:layout_marginTop="15dp"
                android:text="@string/btnLogin"
                android:textSize="@dimen/size_text_profile_midle"
                android:textColor="@color/textBlack"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:background="@drawable/back_for_btn_login"/>

    </LinearLayout>
</FrameLayout>
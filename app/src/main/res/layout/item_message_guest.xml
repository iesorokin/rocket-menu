<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="100"
    android:gravity="end">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="90">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:gravity="end">

                <TextView
                    android:id="@+id/chat_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="18dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="@dimen/size_text_profile_midle"
                    android:textColor="@color/colorWhite"
                    tools:text="@string/app_name"
                    android:background="@drawable/back_for_item_message_guest"
                    android:gravity="center"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/chat_image"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="55dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_profile"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="end">

            <TextView
                android:id="@+id/chat_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="14.14.1444 (21:31:88)"
                android:textColor="@color/textBlack"
                android:layout_weight="0"
                android:textSize="@dimen/size_text_profile_small" />

            <TextView
                android:id="@+id/chat_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="dedog@gmail.com"
                android:textColor="@color/textBlack"
                android:gravity="end"
                android:textSize="@dimen/size_text_profile_small"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="13dp"
                android:layout_weight="0"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>